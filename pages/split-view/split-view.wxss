/* pages/split-view/split-view.wxss */

.split-view-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  position: relative;
}

/* 上半部分：地图 */
.map-section {
  flex: 1;
  position: relative;
  height: 50%;
  width: 100%;
}

.map {
  width: 100%;
  height: 100%;
}

/* 下半部分：列表 */
.list-section {
  flex: 1;
  height: 50%;
  width: 100%;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 列表头部 */
.list-header {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #f5f5f5;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 搜索框 */
.list-search {
  position: relative;
  margin: 10rpx 0;
}

.search-input {
  width: 100%;
  height: 70rpx;
  background-color: #ffffff;
  border-radius: 35rpx;
  padding: 0 70rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 列表内容 */
.list-content {
  flex: 1;
  overflow-y: auto;
}

.list-empty {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.list-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}

.list-item:active {
  background-color: #f5f5f5;
}

.list-item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.list-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.list-item-county {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.list-item-info {
  display: flex;
  justify-content: space-between;
}

.list-item-town {
  font-size: 26rpx;
  color: #666;
}

.list-item-type {
  font-size: 24rpx;
  color: #2E8B57;
}

/* 列表底部 */
.list-footer {
  padding: 20rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e0e0e0;
}

.list-count {
  font-size: 24rpx;
  color: #666;
}

/* 筛选按钮 */
.filter-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #2E8B57;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.filter-btn.active {
  background-color: #ff6b6b;
}

.filter-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 筛选菜单 */
.filter-menu {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  background-color: #fff;
  z-index: 100;
  overflow: hidden;
  transition: height 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-menu.open {
  height: 80%;
  overflow-y: auto;
}

.menu-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.menu-content {
  padding: 20rpx;
}

.filter-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.filter-items {
  display: flex;
  flex-wrap: wrap;
}

.filter-item {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #333;
}

.filter-item.active {
  background-color: #2E8B57;
  color: #fff;
}

.menu-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn-reset, .btn-apply {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-reset {
  background-color: #f5f5f5;
  color: #666;
}

.btn-apply {
  background-color: #2E8B57;
  color: #fff;
}

/* 筛选状态提示 */
.filter-status {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.status-text {
  font-size: 24rpx;
  color: #333;
  margin-right: 10rpx;
}

.status-clear {
  width: 36rpx;
  height: 36rpx;
  background-color: #ddd;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clear-icon {
  font-size: 20rpx;
  color: #666;
}

/* 信息面板 */
.info-panel {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 50;
  max-height: 60vh;
}

.panel-header {
  padding: 20rpx 30rpx;
  background-color: #2E8B57;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.panel-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.close-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-icon {
  font-size: 32rpx;
  color: #fff;
}

.point-info {
  padding: 20rpx 30rpx;
}

.point-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.point-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.point-rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 28rpx;
  color: #ff9800;
  margin-right: 5rpx;
}

.rating-star {
  font-size: 28rpx;
  color: #ff9800;
}

.point-type {
  display: inline-block;
  background-color: #f0f7f4;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

.type-text {
  font-size: 24rpx;
  color: #2E8B57;
}

.point-address {
  margin-bottom: 15rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
}

.point-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.visit-count {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-primary {
  background-color: #2E8B57;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

