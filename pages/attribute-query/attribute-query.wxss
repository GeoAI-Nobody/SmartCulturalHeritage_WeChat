/* pages/attribute-query/attribute-query.wxss */

.attribute-query-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 查询类型选择器 */
.query-type-selector {
  background-color: #ffffff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.type-picker {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  border: 1rpx solid #e0e0e0;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 查询内容区域 */
.query-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  padding-left: 10rpx;
  border-left: 8rpx solid #2E8B57;
}

.result-count {
  background-color: #f0f7f4;
  padding: 15rpx 20rpx;
  margin: 15rpx 0;
  border-radius: 8rpx;
  border-left: 4rpx solid #2E8B57;
}

.count-text {
  font-size: 28rpx;
  color: #2E8B57;
  font-weight: 500;
}

/* 通用查询选择器 */
.query-selector {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx 0;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.picker {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.picker:last-child {
  border-bottom: none;
}

.picker.disabled {
  color: #999;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 通用选择器样式已移至上方 */

/* 结果地图 */
.result-map-container {
  width: 100%;
  height: 80vh; /* 增加地图高度，使其占据更多空间 */
  margin: 10rpx 0; /* 减少上下边距 */
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  position: relative;
}

.result-map {
  width: 100%;
  height: 100%;
}

/* 结果列表容器 */
.result-list-container {
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  max-height: 20vh;
  display: flex;
  flex-direction: column;
}

.result-list-header {
  padding: 8rpx 20rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-list {
  flex: 1;
  overflow-y: auto;
  padding: 0 20rpx;
  -webkit-overflow-scrolling: touch;
  margin-top: 0; /* 移除上方空白 */
}

.result-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background-color: #f5f5f5;
}

.draggable-result-list .result-item {
  padding: 12rpx;
  margin: 0 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
}

.draggable-result-list .result-item:active {
  background-color: #f0f7f4;
}

.result-item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.result-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-item-county {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.result-item-info {
  display: flex;
  justify-content: space-between;
}

.result-item-town {
  font-size: 26rpx;
  color: #666;
}

.result-item-type {
  font-size: 24rpx;
  color: #2E8B57;
}

.result-item-year {
  font-size: 24rpx;
  color: #2E8B57;
}

.result-item-value {
  font-size: 24rpx;
  color: #2E8B57;
}

.result-list-footer {
  padding: 15rpx 20rpx;
  background-color: #f8f8f8;
  border-top: 1rpx solid #e0e0e0;
  text-align: center;
}

.result-count-text {
  font-size: 24rpx;
  color: #666;
}



/* 属性查询结果列表 */
.attr-result-list {
  margin-top: 20rpx;
}

.attr-result-item {
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.attr-result-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.attr-result-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.attr-result-item-location {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.attr-result-item-value {
  font-size: 26rpx;
  color: #2E8B57;
}

/* 信息面板 */
.info-panel {
  position: fixed; /* 改为固定定位，确保在最上层 */
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000; /* 大幅增加z-index，确保显示在最上层 */
  max-height: 60vh;
}

/* 可拖动的结果列表 */
.draggable-result-list {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transition: height 0.2s ease;
  padding-bottom: env(safe-area-inset-bottom); /* 适配全面屏底部安全区域 */
}

.drag-handle {
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 0;
}

.drag-bar {
  width: 60rpx;
  height: 8rpx;
  background-color: #ddd;
  border-radius: 4rpx;
}

.panel-header {
  padding: 20rpx 30rpx;
  background-color: #2E8B57;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.panel-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.close-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-icon {
  font-size: 32rpx;
  color: #fff;
}

.point-info {
  padding: 20rpx 30rpx;
}

.point-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.point-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.point-rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 28rpx;
  color: #ff9800;
  margin-right: 5rpx;
}

.rating-star {
  font-size: 28rpx;
  color: #ff9800;
}

.point-type {
  display: inline-block;
  background-color: #f0f7f4;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

.type-text {
  font-size: 24rpx;
  color: #2E8B57;
}

.point-address {
  margin-bottom: 15rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
}

.point-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.visit-count {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-primary {
  background-color: #2E8B57;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}
